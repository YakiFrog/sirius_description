<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="sirius3">

  <!-- パラメータ定義 -->
  <xacro:property name="wheel_separation" value="0.362" />
  <xacro:property name="wheel_radius" value="0.0825" />
  <xacro:property name="wheel_width" value="0.041" />
  <xacro:property name="wheel_mass" value="26.68" />
  <xacro:property name="base_mass" value="55.93" />

  <!-- パッケージパス -->
  <xacro:property name="package_name" value="sirius_description" />
  <xacro:property name="mesh_path" value="package://$(arg package_name)/urdf/meshes" />

  <!-- 引数 -->
  <xacro:arg name="package_name" default="sirius_description" />
  <xacro:arg name="use_sim_time" default="true" />
  <xacro:arg name="prefix" default="sirius3/" />

  <!-- マテリアル定義 -->
  <material name="base_blue">
    <color rgba="0.1 0.3 0.6 1.0"/>
  </material>

  <material name="wheel_gray">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>

  <!-- ベースフットプリント（地面接触点の仮想リンク） -->
  <link name="$(arg prefix)base_footprint">
    <!-- 空のリンク -->
  </link>

  <!-- ベースリンク -->
  <link name="$(arg prefix)base_link">
    <inertial>
      <origin xyz="0.0002947164165949175 0.09943035225547465 0.3230235286090795" rpy="0.0 0.0 0.0" />
      <mass value="${base_mass}" />
      <inertia ixx="2.8808637737854452" iyy="2.459771630191444" izz="2.1448545974410616" 
               ixy="0.000982314201767401" iyz="0.26295068207750116" ixz="-0.0034301184728964904" />
    </inertial>
    <visual name="base_link_visual">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <geometry>
        <mesh filename="${mesh_path}/Sirius3-body-v2.stl" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="base_blue" />
    </visual>
    <collision name="base_link_collision">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <geometry>
        <mesh filename="${mesh_path}/Sirius3-body-v2.stl" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>

  <!-- フットプリントとベースを接続するジョイント -->
  <joint name="$(arg prefix)footprint_to_base" type="fixed">
    <parent link="$(arg prefix)base_footprint"/>
    <child link="$(arg prefix)base_link"/>
    <origin xyz="0 0 0" rpy="0 0 1.5707963267948966"/>
  </joint>

  <!-- ホイールマクロ定義 -->
  <xacro:macro name="wheel" params="prefix side reflect mesh_file wheel_origin_rpy wheel_visual_origin wheel_visual_rpy joint_origin joint_rpy axis_xyz">
    <link name="$(arg prefix)${side}_wheel">
      <inertial>
        <origin xyz="0.0 0.0 0.021535" rpy="0.0 0.0 0.0" />
        <mass value="${wheel_mass}" />
        <inertia ixx="0.13042" iyy="0.13041" izz="0.24145" 
                 ixy="0.0" iyz="0.0" ixz="0.0" />
      </inertial>
      <visual name="${side}_wheel_visual">
        <origin xyz="${wheel_visual_origin}" rpy="${wheel_visual_rpy}" />
        <geometry>
          <mesh filename="${mesh_path}/${mesh_file}" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="wheel_gray" />
      </visual>
      <collision name="${side}_wheel_collision">
        <origin xyz="${wheel_visual_origin}" rpy="${wheel_visual_rpy}" />
        <geometry>
          <mesh filename="${mesh_path}/${mesh_file}" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
    </link>

    <joint name="${side}_wheel_joint" type="continuous">
      <origin xyz="${joint_origin}" rpy="${joint_rpy}" />
      <parent link="$(arg prefix)base_link" />
      <child link="$(arg prefix)${side}_wheel" />
      <axis xyz="${axis_xyz}" />
      <limit effort="100" velocity="100" />
      <dynamics damping="0.1" friction="0.1" />
    </joint>
  </xacro:macro>

  <!-- 左ホイール -->
  <xacro:wheel 
    prefix="$(arg prefix)"
    side="left" 
    reflect="1"
    mesh_file="Left-Wheel-v1.stl"
    wheel_origin_rpy="0.0 0.0 0.0"
    wheel_visual_origin="0.00026615125671387575 -0.0003525431147384645 -0.019999996185302748"
    wheel_visual_rpy="-3.141592653589793 -1.5707963267948966 0"
    joint_origin="0.18100000000000002 -0.0014818300000000002 0.13236434"
    joint_rpy="-3.141592653589793 -1.5707963267948966 0"
    axis_xyz="0.0 0.0 1.0"
  />

  <!-- 右ホイール -->
  <xacro:wheel 
    prefix="$(arg prefix)"
    side="right" 
    reflect="-1"
    mesh_file="Right-Wheel-v1.stl"
    wheel_origin_rpy="0.0 0.0 0.0"
    wheel_visual_origin="-0.00011675030934453545 0.00014720826142882893 -0.019999996185302748"
    wheel_visual_rpy="-0.3490658503988659 1.5707963267948966 0"
    joint_origin="-0.18100000000000002 -0.0014818300000000002 0.1325"
    joint_rpy="-0.0 -1.5707963267948966 0"
    axis_xyz="0.0 0.0 -1.0"
  />
</robot>