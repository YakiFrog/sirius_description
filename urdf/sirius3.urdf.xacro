<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="sirius3">

  <!-- パラメータ定義 -->
  <xacro:property name="wheel_separation" value="0.362" />
  <xacro:property name="wheel_radius" value="0.0825" />
  <xacro:property name="wheel_width" value="0.041" />
  <xacro:property name="wheel_mass" value="26.68" />
  <xacro:property name="base_mass" value="55.93" />

  <!-- パッケージパス -->
  <xacro:property name="package_name" value="sirius_description" />
  <xacro:property name="mesh_path" value="package://$(arg package_name)/urdf/meshes" />

  <!-- 引数 -->
  <xacro:arg name="package_name" default="sirius_description" />
  <xacro:arg name="use_sim_time" default="true" />
  <xacro:arg name="prefix" default="sirius3/" />

  <!-- マテリアル定義 -->
  <material name="base_blue">
    <color rgba="0.1 0.3 0.6 1.0"/>
  </material>

  <material name="wheel_gray">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>

  <material name="lidar_gray">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <!-- ベースフットプリント（地面接触点の仮想リンク） -->
  <link name="$(arg prefix)base_footprint">
    <!-- 空のリンク -->
  </link>

  <!-- ベースリンク -->
  <link name="$(arg prefix)base_link">
    <inertial>
      <origin xyz="0.0002947164165949161 0.09943035225547472 0.3230235286090794" rpy="0.0 0.0 0.0" />
      <mass value="${base_mass}" />
      <inertia ixx="2.8808637737854497" iyy="2.45977163019146" izz="2.1448545974410616" 
               ixy="0.0009823142017673183" iyz="0.26295068207749944" ixz="-0.003430118472896634" />
    </inertial>
    <visual name="base_link_visual">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <geometry>
        <mesh filename="${mesh_path}/Sirius3-body-v2.stl" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="base_blue" />
    </visual>
    <collision name="base_link_collision">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <geometry>
        <mesh filename="${mesh_path}/Sirius3-body-v2.stl" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>

  <!-- フットプリントとベースを接続するジョイント -->
  <joint name="$(arg prefix)footprint_to_base" type="fixed">
    <parent link="$(arg prefix)base_footprint"/>
    <child link="$(arg prefix)base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ホイールマクロ定義 -->
  <xacro:macro name="wheel" params="prefix side reflect mesh_file wheel_mass_value wheel_inertia_ixx wheel_inertia_iyy wheel_inertia_izz wheel_inertia_ixy wheel_inertia_iyz wheel_inertia_ixz wheel_inertial_origin wheel_visual_origin wheel_visual_rpy joint_origin joint_rpy axis_xyz">
    <link name="$(arg prefix)${side}_wheel">
      <inertial>
        <origin xyz="${wheel_inertial_origin}" rpy="0.0 0.0 0.0" />
        <mass value="${wheel_mass_value}" />
        <inertia ixx="${wheel_inertia_ixx}" iyy="${wheel_inertia_iyy}" izz="${wheel_inertia_izz}" 
                 ixy="${wheel_inertia_ixy}" iyz="${wheel_inertia_iyz}" ixz="${wheel_inertia_ixz}" />
      </inertial>
      <visual name="${side}_wheel_visual">
        <origin xyz="${wheel_visual_origin}" rpy="${wheel_visual_rpy}" />
        <geometry>
          <mesh filename="${mesh_path}/${mesh_file}" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="wheel_gray" />
      </visual>
      <collision name="${side}_wheel_collision">
        <origin xyz="${wheel_visual_origin}" rpy="${wheel_visual_rpy}" />
        <geometry>
          <mesh filename="${mesh_path}/${mesh_file}" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
    </link>

    <joint name="${side}_wheel_joint" type="continuous">
      <origin xyz="${joint_origin}" rpy="${joint_rpy}" />
      <parent link="$(arg prefix)base_link" />
      <child link="$(arg prefix)${side}_wheel" />
      <axis xyz="${axis_xyz}" />
      <limit effort="100" velocity="100" />
      <dynamics damping="5.0" friction="2.0" />
    </joint>
  </xacro:macro>

  <!-- 左ホイール -->
  <xacro:wheel 
    prefix="$(arg prefix)"
    side="left" 
    reflect="1"
    mesh_file="Left-Wheel-v1.stl"
    wheel_mass_value="26.684250609189966"
    wheel_inertia_ixx="0.24147472596060576"
    wheel_inertia_iyy="0.13040791997952456"
    wheel_inertia_izz="0.13041983338763752"
    wheel_inertia_ixy="-1.3386522533795057e-05"
    wheel_inertia_iyz="1.9456112928556427e-05"
    wheel_inertia_ixz="-5.293518847815378e-06"
    wheel_inertial_origin="0 0 0"
    wheel_visual_origin="0 0 0"
    wheel_visual_rpy="0 0 0"
    joint_origin="0.0 0.16 0.13"
    joint_rpy="0 0 0"
    axis_xyz="0.0 1.0 0.0"
  />

  <!-- 右ホイール -->
  <xacro:wheel 
    prefix="$(arg prefix)"
    side="right" 
    reflect="-1"
    mesh_file="Right-Wheel-v1.stl"
    wheel_mass_value="26.684250609189966"
    wheel_inertia_ixx="0.24147472596060576"
    wheel_inertia_iyy="0.13040791997952456"
    wheel_inertia_izz="0.13041983338763752"
    wheel_inertia_ixy="-1.3386522533795057e-05"
    wheel_inertia_iyz="1.9456112928556427e-05"
    wheel_inertia_ixz="-5.293518847815378e-06"
    wheel_inertial_origin="0 0 0"
    wheel_visual_origin="0 0 0"
    wheel_visual_rpy="0 0 0"
    joint_origin="0.0 -0.16 0.13"
    joint_rpy="0 0 0"
    axis_xyz="0.0 1.0 0.0"
  />

  <!-- LiDAR Link -->
  <link name="$(arg prefix)base_link/lidar_link">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <mass value="0.5" />
      <inertia ixx="0.01" iyy="0.01" izz="0.01" 
               ixy="0.0" iyz="0.0" ixz="0.0" />
    </inertial>
    <visual name="lidar_visual">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <geometry>
        <cylinder radius="0.052" length="0.072" />
      </geometry>
      <material name="lidar_gray" />
    </visual>
    <collision name="lidar_collision">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <geometry>
        <cylinder radius="0.052" length="0.072" />
      </geometry>
    </collision>
  </link>

  <!-- LiDAR Joint -->
  <joint name="$(arg prefix)lidar_joint" type="fixed">
    <origin xyz="0.0 0.0 0.85" rpy="0.0 0.0 0.0" />
    <parent link="$(arg prefix)base_link" />
    <!-- 苦肉の策。これでGazebo上のTFと名前が重なるので無駄に増えなくなる -->
    <child link="$(arg prefix)base_link/lidar_link" />
  </joint>
</robot>
